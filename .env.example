# Backpack API Config
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Trading Config
SYMBOL=ETH_USDC_PERP

# 补仓触发跌幅 (0.0022 = 0.22%)
DCA_DROP_PCT=0.0022

# 价格止损幅度 (0.01 = 1%)
STOP_LOSS_PCT=0.01

# 超时止损时间。DCA 模式给补仓后的反弹留出时间 (30分钟 = 1800秒)
STOP_LOSS_TIMEOUT=1800

# 止损后的冷静期，防止连续亏损
COOL_DOWN=120

# 杠杆倍数 (Spot请设为1, Perp可设更高)
LEVERAGE=4

# 单笔订单使用资金比例 (0.3 = 30% 余额)
BALANCE_PCT=0.3

# Taker 费率 (0.018% = 0.00018)
TAKER_FEE_RATE=0.00018

# 最多补仓次数 (2次补仓 + 1次底仓 = 共3单)
MAX_DCA_COUNT=2

# 补仓倍率 (1.0 = 1:1 补仓)
# 1.0 表示每次买入和持仓量相同的数量
DCA_MULTIPLIER=1.0
