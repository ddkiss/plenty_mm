# Backpack API Config
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# Trading Config
SYMBOL=SOL_USDC
# 杠杆倍数 (Spot请设为1, Perp可设更高)
LEVERAGE=1
# 单笔订单使用资金比例 (0.1 = 10% 余额)
BALANCE_PCT=0.8
# 价格止损幅度 (0.01 = 1%)
STOP_LOSS_PCT=0.01
# 冷却时间(秒)
COOL_DOWN=30
# [重点] 持仓超时止损时间 (秒)
# 如果持仓超过这个时间还没有卖出，将不再坚持保本，而是跟随市场卖一价离场
STOP_LOSS_TIMEOUT=150