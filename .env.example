# ==========================================
# Backpack Exchange API 配置
# ==========================================
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here

# ==========================================
# 交易对与策略模式
# ==========================================
# 交易对名称 (合约通常以 _PERP 结尾)
SYMBOL=SOL_USDC_PERP

# 策略选择
# SCALPER    : 原有的 DCA/Tick 策略
# DUAL_MAKER : [推荐] 新版双向买2卖2静默挂单策略
STRATEGY_TYPE=DUAL_MAKER

# ==========================================
# DUAL_MAKER 策略专属参数 (新策略)
# ==========================================
# 单笔挂单金额占总资金的比例 (0.05 = 1/20)
GRID_ORDER_PCT=0.05

# 资金利用率上限 (0.45 = 45%)
# 当 (持仓价值 / 账户净值) > 此值时，触发 Unwind 回本模式
MAX_POSITION_PCT=0.45

# 成交后的冷却时间 (秒)
# 在双向挂单成交一笔后，等待几秒再重新挂单，防止极速行情连续成交
REBALANCE_WAIT=2

# 回本模式超时时间 (秒)
# 进入回本模式后，如果挂单超过此时间未成交，将贴近盘口强制平仓
BREAKEVEN_TIMEOUT=1200

# ==========================================
# 通用参数 / SCALPER 旧策略参数
# ==========================================
# 杠杆倍数 (建议设为 1.0，根据风险偏好调整)
LEVERAGE=1.0

# 止损后的冷静期 (秒)
COOL_DOWN=180

# Taker 费率 (用于统计估算，Maker 模式下通常不需要)
TAKER_FEE_RATE=0.00018

# --- 以下参数仅用于 SCALPER 旧策略 ---
BALANCE_PCT=0.3
STOP_LOSS_PCT=0.02
STOP_LOSS_TIMEOUT=1800
MAX_DCA_COUNT=2
DCA_DROP_PCT=0.008
DCA_MULTIPLIER=1.0